@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@inject RoleManager<IdentityRole> roleManager
@inject UserManager<IdentityUser> userManager

<h1>Jesteś zalogowany</h1>

<ul>
    <li><a asp-action="add">Add role</a></li>
    <li><a asp-action="addToRole">Add role for user</a></li>
</ul>
@if (User.Identity.IsAuthenticated)
{
    <ul>
        <li>@User.Identity.Name</li>
        @foreach (var item in ViewBag.UserRoles)
        {
            <li>@item</li>
        }
    </ul> 
    <h2>Role w systemie:</h2>
    <ul>
        @foreach (var item in roleManager.Roles)
        {
            <li>@item.Name</li>
        }
    </ul> 
}


<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>